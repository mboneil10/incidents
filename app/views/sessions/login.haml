%h2 Log in
= form_with url: login_url do |form|
  .field
    = form.label :badge_number
    = form.password_field :badge_number, required: true
  .field
    = form.label :last_name
    = form.text_field :last_name, required: true
  .actions
    = form.submit 'Log in'
- unless Rails.env.production?
  %h2 Or login as:
  = form_with url: login_url do |form|
    .field
      = form.label 'Staff'
      = form.select :staff,
        options_from_collection_for_select(@staff, :id, :proper_name),
        include_blank: true
    .field
      = form.label 'Supervisor'
      = form.select :supervisor,
        options_from_collection_for_select(@supervisors, :id, :proper_name),
        include_blank: true
    .field
      = form.label 'Driver'
      = form.select :driver,
        options_from_collection_for_select(@drivers, :id, :proper_name),
        include_blank: true
    .actions
      = form.submit 'Log in'
