- if report.last_update.present?
  %p
    %em
      Last changed
      = report.last_updated_at
      by
      = report.last_updated_by
    |
    = link_to 'View full history', history_incident_url(report)
    TODO: should be supervisor report history
%p
  %strong Hard drive pulled?
  = yes_no report.hard_drive_pulled?
- if report.hard_drive_pulled?
  %p
    %strong Hard drive pulled at:
    = report.hard_drive_pulled_at.strftime '%l:%M %P'
  %p
    %strong Hard drive removed:
    = report.hard_drive_removed
  %p
    %strong Hard drive replaced:
    = report.hard_drive_replaced
%p
  %strong Pictures saved?
  = yes_no report.pictures_saved?
- if report.pictures_saved?
  %p
    %strong Number of pictures saved:
    = report.saved_pictures
%p
  %strong Passenger statement:
  = simple_format report.passenger_statement
- if report.faxed.present?
  %p
    %strong Faxed at:
    = report.faxed.try :strftime, '%A, %B %e, %Y %l:%M %P'
%p
  %strong Completed drug or alcohol test?
  = yes_no report.completed_drug_or_alcohol_test?
- if report.completed_drug_or_alcohol_test?
  %p
    %strong Reason test completed:
    = report.reason_test_completed
  - case report.reason_test_completed
  - when 'Post-Accident'
    %p
      %strong Test deemed unnecessary?
      = yes_no_image report.test_not_conducted?
    %p
      %strong Test due to bodily injury?
      = yes_no_image report.test_due_to_bodily_injury?
    %p
      %strong Test due to disabling damage?
      = yes_no_image report.test_due_to_disabling_damage?
    %p
      %strong Test due to fatality?
      = yes_no_image report.test_due_to_fatality?
  - when 'Reasonable Suspicion'
    %p
      %strong Completed drug test?
      = yes_no_image report.completed_drug_test?
    %p
      %strong Completed alcohol test?
      = yes_no_image report.completed_alcohol_test?
    %p
      %strong Observation made at:
      = report.observation_made_at.try :strftime, '%l:%M %P'
    %p
      %strong Test due to employee appearance?
      = yes_no_image report.test_due_to_employee_appearance?
    - if report.test_due_to_employee_appearance?
      %p
        %strong Employee appearance:
        = report.employee_appearance
    %p
      %strong Test due to employee speech?
      = yes_no_image report.test_due_to_employee_speech?
    - if report.test_due_to_employee_speech?
      %p
        %strong Employee speech:
        = report.employee_speech
    %p
      %strong Test due to employee behavior?
      = yes_no_image report.test_due_to_employee_behavior?
    - if report.test_due_to_employee_behavior?
      %p
        %strong Employee behavior:
        = report.employee_behavior
    %p
      %strong Test due to employee odor?
      = yes_no_image report.test_due_to_employee_odor?
    - if report.test_due_to_employee_odor?
      %p
        %strong Employee odor:
        = report.employee_odor
  %p
    %strong Testing facility:
    = report.testing_facility
  - if report.testing_facility_notified_at.present?
    %p
      %strong Testing facility notified at:
      = report.testing_facility_notified_at.strftime '%l:%M %P'
  - if report.employee_notified_of_test_at.present?
    %p
      %strong Employee notified of test at:
      = report.employee_notified_of_test_at.strftime '%l:%M %P'
  - if report.employee_departed_to_test_at.present?
    %p
      %strong Employee departed to test at:
      = report.employee_departed_to_test_at.strftime '%l:%M %P'
  - if report.employee_arrived_at_test_at.present?
    %p
      %strong Employee arrived at test at:
      = report.employee_arrived_at_test_at.strftime '%l:%M %P'
  - if report.test_started_at.present?
    %p
      %strong Test started at:
      = report.test_started_at.strftime '%l:%M %P'
  - if report.test_ended_at.present?
    %p
      %strong Test ended at:
      = report.test_ended_at.strftime '%l:%M %P'
  - if report.superintendent_notified_at.present?
    %p
      %strong Superintendent / Assistant Superintendent notified at:
      = report.superintendent_notified_at.strftime '%l:%M %P'
  - if report.program_manager_notified_at.present?
    %p
      %strong Program Manager for Drug & Alcohol Testing notified at:
      = report.program_manager_notified_at.strftime '%l:%M %P'
  - if report.director_notified_at.present?
    %p
      %strong Director / Assistant Director notified at:
      = report.director_notified_at.strftime '%l:%M %P'
  - if report.amplifying_comments.present?
    %p
      %strong Amplifying comments:
      = simple_format report.amplifying_comments
