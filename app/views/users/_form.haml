= form_for user do |f|
  %table.edit-form
    %tr
      %td= f.label :first_name
      %td= f.text_field :first_name, required: true
    %tr
      %td= f.label :last_name
      %td= f.text_field :last_name, required: true
    %tr
      %td= f.label :badge_number
      %td= f.text_field :badge_number
    %tr
      %td= f.label :hastus_id
      %td= f.text_field :hastus_id
    %tr
      %td= f.label :division
      %td= f.select :division, options_for_select(User::DIVISIONS)
    %tr
      %td= f.label :supervisor
      %td= f.check_box :supervisor
    %tr
      %td= f.label :staff
      %td= f.check_box :staff
    %tr
      %td= f.label :email, 'Email (for incident notifications)'
      %td= f.text_field :email
    %tr
      %td{colspan: 2}
        %i
          Staff members with an email provided will
          be automatically sent email notifications.
    %tr
      %td{ colspan: 2 }= f.submit 'Save driver', class: 'btn btn-primary submit'
