= form_for user do |f|
  %table.edit-form
    %tr
      %td= f.label :name
      %td= f.text_field :name, required: true
    %tr
      %td= f.label :badge_number
      %td= f.text_field :badge_number
    %tr
      %td= f.label :email
      %td= f.text_field :email, required: true
    %tr
      %td= f.label :staff
      %td= f.check_box :staff
    %tr
      %td= f.label :password
      %td= f.password_field :password
    %tr
      %td= f.label :password_confirmation
      %td= f.password_field :password_confirmation
    %tr
      %td{ colspan: 2 }= f.submit 'Save driver', class: 'btn btn-primary submit'
