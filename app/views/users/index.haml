- if @inactive
  %h1 Inactive Drivers
- else 
  %h1 Active Drivers

.center
  - if params[:inactive]
    = link_to 'Manage active drivers', users_path
  - elsif User.inactive.present?
    = link_to 'Manage inactive drivers', users_path(inactive: true)

%table.index
  %thead
    %tr
      %th Name
      %th Hastus ID
      %th Division
      %th Supervisor?
      %th Staff?
      %th{ colspan: 4 }
  %tbody
    - @users.each do |user|
      %tr
        %td= user.proper_name
        %td= user.hastus_id
        %td= user.division
        %td= yes_no_image user.supervisor?
        %td= yes_no_image user.staff?
        %td
          - if user.driver?
            = link_to incidents_user_path(user) do
              %button.btn.btn-default View incidents
        %td
          = link_to edit_user_path(user) do
            %button.btn.btn-default Edit
        %td
          - if user.active?
            = link_to deactivate_user_path(user), method: :post do
              %button.btn.btn-default.delete Deactivate
          - else
            = link_to reactivate_user_path(user), method: :post do
              %button.btn.btn-default.delete Reactivate
        %td
          = link_to user_path(user), method: :delete do
            %button.btn.btn-default.delete Delete
