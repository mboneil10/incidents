- if @incidents.present?
  %table.incidents
    %thead
      %tr
        %th Driver
        %th Occurred at
        %th Run
        %th Bus
        %th Location
        %th Complete?
        - if current_user.staff?
          %th Reviewed?
          %th{ colspan: 4 }
        - else
          %th{ colspan: 3 }
    %tbody
      - @incidents.each do |incident|
        %tr
          %td= incident.driver.name
          %td= incident.occurred_at_readable
          %td= incident.run
          %td= incident.bus
          %td= incident.location
          %td= yes_no_image incident.completed?
          - if current_user.staff?
            %td= yes_no_image incident.reviewed?
          %td
            = link_to incident do
              %button.btn.btn-default View
          %td
            = link_to incident_url(incident, format: :pdf) do
              %button.btn.btn-default Print
          %td
            - if current_user.staff? || !incident.reviewed?
              = link_to edit_incident_path(incident) do
                %button.btn.btn-default
                  - if incident.completed?
                    Edit
                  - else
                    Complete
          - if current_user.staff?
            %td
              = link_to incident, method: :delete do
                %button.btn.btn-default.delete Delete
- else
  %h2 No incidents found.
